<div class="mainpage">

  <div class="mainpage-header">
      <div class="mainpage-header-left">
        <h1><%= link_to "Customer Management System", root_path, class: 'home-btn' %></h1>
        <div class="mainpage-header-left-contents">
        </div>
      </div>
      <div class="mainpage-header-right">
        <div class="mainpage-header-right-contents">
          <div class="right-content">
            <%= current_user.name %>
          </div>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'%>
        </div>
      </div>
  </div>

<div class="new-customer">
  <h1>新規顧客登録</h1>
  <div class="new-customer-data">
    <%= form_with model: @customer, local: true do |form| %>
    <%= render 'layouts/error_messages', model: form.object %>
    <div class="customer-data-content">
      <div class="content-name">
        <%= form.text_field :family_name, placeholder:"姓" %>
      </div>
      <div class="content-name">
        <%= form.text_field :first_name, placeholder:"名" %>
      </div>
      <div class="content-name">
        <%= form.text_field :family_name_kana, placeholder:"姓カナ" %>
      </div>
      <div class="content-name">  
        <%= form.text_field :first_name_kana, placeholder:"名カナ" %>
      </div>
    </div>

    <div class="customer-data-content">
      <div class="content-name">
        <%= raw sprintf(form.date_select(:birthday,class:'select-birth',
            id:"birth-date",use_month_numbers: true,prompt:'--',
            start_year: 1930,end_year: (Time.now.year - 5),date_separator: '%s'),
            "年", "月") + "日" %>
      </div>
      <div class="content-name">  
        <%= form.text_field :age, placeholder:"年齢" %>
      </div>
      <div class="content-name">
      <%= form.radio_button :gender, "男" %>男 <%= form.radio_button :gender, "女" %>女
      </div>
    </div>

    <div class="customer-data-content">
      <div class="content-name">  
        <%= form.text_field :postal_code, placeholder:"郵便番号" %>
      </div>
      <div class="content-name">  
        <%= form.text_field :address, placeholder:"住所" %>
      </div>
      <div class="content-name">  
        <%= form.text_field :building_name, placeholder:"建物名" %>
      </div>
    </div>

    <div class="customer-data-content">
      <div class="content-name">
        <%= form.text_field :phone_number, placeholder:"電話番号(ハイフンなしで入力）" %>
      </div>
      <div class="content-name">
        <%= form.email_field :email, placeholder:"メールアドレス" %>
      </div>
    </div>

    <div class="customer-data-btn">
      <div class="customer-newbtn">
        <%= form.submit '登録'%>
      </div>
    </div>
    <% end %>
  </div>
</div>

</div>